<<%= @href ? 'a' : 'button' %>
    name="<%= @name %>" id="<%= @name %>"
    <% if @type == 'submit' && !@href %> type="submit"<% end %>
    value="1"
    <% if @href %>href="<%= @href %>"<% end %>
    class="px-3 py-2 rounded-lg <%= pick_color %>"
>
    <% if @icon %><%= icon 'fa-solid', @icon %><% end %>
    <%= @label %>
</<%= @href ? 'a' : 'button' %>>
