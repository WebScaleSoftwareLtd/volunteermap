<div class="block">
    <div class="flex">
        <div class="flex-col h-32 w-32 sm:h-16 sm:w-16">
            <img
                src="<%= user.avatar_url %>"
                alt="Avatar" class="rounded-full"
            >
        </div>
        <div class="flex-col ml-4">
            <h1 class="text-2xl font-bold">
                <%= user.username %>
            </h1>
            <p class="mt-1 dark:text-gray-200">
                Member since <%= user.created_at.strftime("%B %Y") %>.
                <% unless slim %>Click to view/edit your profile and postings.<% end %>
            </p>
        </div>
    </div>
</div>
