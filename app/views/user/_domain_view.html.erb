<hr class="my-6 dark:border-gray-600" />

<div class="block">
    <h3 class="text-lg font-bold">
        <%= domain.domain %>
    </h3>
    <% if domain.validation_active %>
        <p class="text-sm mt-2 text-green-700 dark:text-green-300">
            Domain currently marked as valid.
        </p>
    <% else %>
        <p class="text-sm mt-2 text-red-700 dark:text-red-300">
            Domain currently marked as invalid.
        </p>
    <% end %>

    <div class="flex mt-3">
        <% unless domain.validation_active %>
            <div class="flex-col mr-2">
                <%= form_with method: :patch do |form| %>
                    <%= form.hidden_field :domain, value: domain.domain %>
                    <%= render ButtonComponent.new(
                        name: 'submit',
                        label: 'Re-Validate Domain',
                        type: 'submit',
                        icon: 'check',
                    ) %>
                <% end %>
            </div>
        <% end %>

        <div class="flex-col">
            <%= form_with method: :delete do |form| %>
                <%= form.hidden_field :domain, value: domain.domain %>
                <%= render ButtonComponent.new(
                    name: 'submit',
                    label: 'Delete Domain',
                    type: 'danger',
                    icon: 'times',
                ) %>
            <% end %>
        </div>
    </div>
</div>
