<div class="bg-white dark:bg-gray-800 p-4 block w-full h-full dark:text-white">
    <div class="flex">
        <div class="flex-col">
            <a class="text-black dark:text-white" href="/user">
                <%= render partial: 'user_info', locals: {user: user, slim: false} %>
            </a>
        </div>
        <div class="flex-grow text-right ml-6 mt-0">
            <form method="dialog">
                <button class="text-2xl mt-0" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </form>
        </div>
    </div>

    <hr class="my-2 dark:border-gray-600" />

    <%= form_with method: :delete, url: '/auth/logout', data: {turbo: false} do %>
        <button type="submit">
            <div class="flex m-2">
                <div class="flex-col text-4xl font-thin">
                    <%= icon 'fa-solid', 'key' %>
                </div>
                <div class="flex-col text-left ml-4">
                    <h1 class="text-xl font-bold">
                        Sign Out
                    </h1>
                    <p class="mt-1 dark:text-gray-200">
                        Sign out of your account from all devices you are logged into.
                    </p>
                </div>
            </div>
        </button>
    <% end %>

    <hr class="my-4 mt-2 dark:border-gray-600" />

    <a class="text-black dark:text-white" href="/user/bookmarks">
        <div class="flex m-2">
            <div class="flex-col text-4xl font-thin">
                <%= icon 'fa-solid', 'bookmark' %>
            </div>
            <div class="flex-col text-left ml-6">
                <h1 class="text-xl font-bold">
                    Bookmarks
                </h1>
                <p class="mt-1 dark:text-gray-200">
                    Lists all of the bookmarks associated with your user.
                </p>
            </div>
        </div>
    </a>

    <hr class="my-4 dark:border-gray-600" />

    <a class="text-black dark:text-white" href="/user/domains">
        <div class="flex m-2">
            <div class="flex-col text-4xl font-thin">
                <%= icon 'fa-solid', 'globe' %>
            </div>
            <div class="flex-col text-left ml-4">
                <h1 class="text-xl font-bold">
                    Domains
                </h1>
                <p class="mt-1 dark:text-gray-200">
                    Lists all of the domains associated with your user.
                </p>
            </div>
        </div>
    </a>
</div>
